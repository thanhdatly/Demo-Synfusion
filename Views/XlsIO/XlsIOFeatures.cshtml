@using Syncfusion.JavaScript.DataVisualization
@{
    ViewBag.Title = "XlsIO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>XlsIO Features:</h2><br />
<li> XlsIO Features - Getting Started</li>
<li> Theme - Flat-Azure</li>
<h2>XlsIO </h2><br />
<div id = "ControlRegion">
@{Html.BeginForm("XlsIOFeatures", "XlsIO", FormMethod.Post);
  {
            <div class="Common">
            <div class="tablediv">
                <div class="rowdiv">
                    <label>
                        Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please
+                       note that MS Excel Viewer or MS Excel is required to view the resultant document.
                    </label>
                </div>
                <br />
                <div class="rowdiv">
                    <div class="celldiv">
                        <label>
                            <strong>  Save As :</strong>
                        </label>
                        <input id="rbtnCSV" type="radio" name="SaveOption" value="CSV" />
                        <label for="rbtnCSV">
                            CSV
                        </label>
                        <input id="rbtn2003" type="radio" name="SaveOption" value="Excel 2003" />
                        <label for="rbtn2003">
                            Excel 2003
                        </label>
                        <input id="rbtn2007" type="radio" name="SaveOption" value="Excel 2007" />
                        <label for="rbtn2007">
                            Excel 2007
                        </label>
                        <input id="rbtn2010" type="radio" name="SaveOption" value="Excel 2010" />
                        <label for="rbtn2010">
                            Excel 2010
                        </label>
                        <input id="rbtn2013" type="radio" name="SaveOption" value="Excel 2013" checked="checked" />
                        <label for="rbtn2013">
                            Excel 2013
                        </label>
                    </div>
                    <br />
                    <div class="celldiv">
                        <input class="buttonStyle" type="submit" value="Create Document" style=" width:200px;" />
                    </div>
                </div>
                <br />
            </div>
        </div>
      Html.EndForm();
  }
}
</div>
