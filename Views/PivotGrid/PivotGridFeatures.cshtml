@using Syncfusion.JavaScript;
@using Syncfusion.JavaScript.Olap;
@{
    ViewBag.Title = "PivotGrid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>PivotGrid Features:</h2>
<br/>
<li> PivotGrid Samples - Grouping Bar (Relational)</li>
<li> Localization - en-US</li>
<li> Theme - Flat-Azure</li>
<br/>
     <script src="@Url.Content("~/Scripts/ej/i18n/ej.culture.en-US.min.js")"></script>
     <script src="@Url.Content("~/Scripts/ej/l10n/ej.localetexts.en-US.min.js")"></script>
<script src="../../Scripts/ej/ej.web.all.min.js" type="text/javascript"></script>
<script src="../../Scripts/pivotgrid.datasource.js" type="text/javascript"></script>
<style>
        #PivotGrid1 {
            width:100%;
            height:350px;
            overflow:auto;
        }
</style>
<div id = "ControlRegion">
<script type="text/javascript">
    function onLoad(args) {
        args.model.dataSource.data = pivot_dataset;
    }
</script>
@Html.EJ().Pivot().PivotGrid("PivotGrid1").Locale("en-US").EnableGroupingBar(true).ClientSideEvents(clientSideEvents => clientSideEvents.Load("onLoad")).DataSource(dataSource => dataSource.Rows(rows => { rows.FieldName("Country").FieldCaption("Country").Add(); rows.FieldName("State").FieldCaption("State").Add(); }).Columns(columns => { columns.FieldName("Product").FieldCaption("Product").Add(); }).Values(values => { values.FieldName("Amount").Add(); values.FieldName("Quantity").Add(); }).Filters(filters => { filters.FieldName("Date").FieldCaption("Date").Add(); }))
</div>
</div>
